package ui;

import javafx.fxml.FXML;
import javafx.scene.control.Label;

public class ScorePaneController {
	@FXML
	private Label lbTurnCount;
	@FXML
	private Label lbScore;
	
	public ScorePaneController() {
		
	}
	
	public void refreshScore(int turn, int score, int leftCards) {
		String tempTurn = "";
		String tempScore = "";
		
		tempTurn += turn;
		tempScore += score;
		
		lbTurnCount.setText(tempTurn);
		lbScore.setText(tempScore);
	}
	
	@FXML
	private void initialize() {
		
	}
}
