package ui;

import javafx.fxml.FXML;
import javafx.scene.control.Label;

public class ScorePaneController {
	@FXML
	private Label lbTurnCount;
	@FXML
	private Label lbScore;
	@FXML
	private Label lbLeftCards;
	
	public ScorePaneController() {
		
	}
	
	public void refreshScore(int turn, int score, int leftCards) {
		lbTurnCount.setText("" + turn);
		lbScore.setText("" + score);
		lbLeftCards.setText("" + leftCards);
	}
	
	@FXML
	private void initialize() {
		
	}
}
