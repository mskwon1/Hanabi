package board;

import entity.Card;

public class Upcards {
	private boolean[] red;
	private boolean[] green;
	private boolean[] white;
	private boolean[] yellow;
	private boolean[] blue;
	
	public Upcards() {
		red = new boolean[5];
		green = new boolean[5];
		white = new boolean[5];
		yellow = new boolean[5];
		blue = new boolean[5];
	}
	
	public boolean putCard(Card card) {
		String name = card.getColor().name();
		
		switch (name) {
		case "RED":
			if (red[card.getNum()]) {
				/*
				 * 오류처리 (이미 있는 카드)
				 */
				return false;
			} else {
				red[card.getNum()] = true;
				return true;
			}
		case "GREEN":
			if (green[card.getNum()]) {
				return false;
			} else {
				green[card.getNum()] = true;
				return true;
			}
		case "WHITE":
			if (white[card.getNum()]) {
				return false;
			} else {
				white[card.getNum()] = true;
				return true;
			}
		case "YELLOW":
			if (yellow[card.getNum()]) {
				return false;
			} else {
				yellow[card.getNum()] = true;
				return true;
			}
		case "BLUE":
			if (blue[card.getNum()]) {
				return false;
			} else {
				blue[card.getNum()] = true;
				return true;
			}
		default:
			/*
			 * 오류처리 (색깔 정보가 잘못됨)
			 */
			break;
		}
	}
}
